extends layout

block content
  h1= title
  - var items=results
  div(class="container-fluid")
    div(class="row m-1")
      a.btn.btn-primary.mb-3(href='/trees/create') Create trees
      each item in items
        - let detailDestination = `/trees/detail?id=${item._id}`
        - let deleteDestination = `/trees/delete?id=${item._id}`
        div(class="row-sm-2", class="m-1") trees #{item.trees_Name}(#{item.trees_height}) is #{item.trees_cost}
          button.btn.btn-success.ml-1(onclick=`dispatch("/trees/update?id=${item._id}")`) Update
          button.btn.btn-primary.ml-1(onclick=`dispatch("${detailDestination}")`) Detail
          button.btn.btn-danger.ml-1(onclick=`dispatch("${deleteDestination}")`) Delete

  script.
    function dispatch(path){
      window.location.href=path
    }